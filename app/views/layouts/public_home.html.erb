<!DOCTYPE html>
  <%= render :partial => "layouts/head" %>
  <body>
    <div id="container">
      <%unless @page[:landing] == "automotriz_buho" %>
        <div id="header_home">
          <div class="container_12" style="height:110px;">
            <div class="grid_12" style="height:100%;z-index:3;">
              <%= image_tag "bullets/banderas/flag_cl.png", :class=>'flag' %>
              <%= render :partial => '/layouts/menu' %>
              <h1 id="logo">
                <%= link_to "<span>#{@page[:h1]}</span>", root_url %>
              </h1>
            </div>
            <div class="grid_12"><%= ruta_exploracion unless @page[:ruta_navegacion_inactiva] %></div>
            <% unless flash.blank? %>
              <div class="grid_6 prefix_3" style="margin-bottom:-30px;z-index:2;">
                <% flash.each do |key, msg| -%>
                  <%= content_tag :div, msg, :id => key, :style=>"text-align:center; margin:0px auto; padding:4px; font-size:11px; font-weight:bold; color:#FFF; z-index:2; background-color:#EEB422; width:400px;" -%>
                <% end -%>
              </div>
            <% end %>
          </div>
        </div>
      <%else%>
        <div style="background-color:#FFFFFF"  >
          <div class="container_12" style="height:90px;">
            <div class="grid_12" style="height:100%;z-index:3;">
              <h1 id="logo" style="top:30px;">
                <%= link_to "<span>Seguro Automotriz Buh√≥</span>", root_url%>
              </h1>
              <h3 style="color:#0397C3;font-size: 20px;float:right;margin-top:68px;margin-right:0px;font-family: 'Corbel'"><strong>Antes de elegir, Compara!</strong></h3>
            </div>
          </div>
        </div>
      <%end%>
      <%= clear %>
      <%= @content_for_layout %>
      <div style="height:191px; clear:both;"></div>
    </div>
    <%= render "layouts/footer_public" %>
    <%= render "layouts/analytics" %>
  </body>
</html>
